{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",                             
    "experimentalDecorators": true,                 
    "emitDecoratorMetadata": true,                  

    /* Modules */
    "module": "commonjs",                               
    "baseUrl": "./src",                                 
    "paths": {
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@modules/*": ["modules/*"],
      "@routes/*": ["routes/*"],
      "@shared/*": ["shared/*"]
    },                                        
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           

    /* Type Checking */
    "strict": true,                           
    "strictPropertyInitialization": false,            
    "skipLibCheck": true                         
  }
}
